# CMC Sober Coach Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Feature Flags (v1)
FEATURE_V1=0
FEATURE_COACHES=0
FEATURE_PLAN=0
FEATURE_ONBOARDING_MAP=0
FEATURE_PWA=0
FEATURE_PUSH=0
FEATURE_ROLEPLAYS=0

# Legal/Assessment Disclaimer
LEGAL_ASSESSMENT_DISCLAIMER=0

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Session Management (optional)
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# PWA Configuration (optional)
PWA_NAME="CMC Sober Coach"
PWA_SHORT_NAME="SoberCoach"
PWA_DESCRIPTION="AI-powered behavior coaching for substance use recovery"
PWA_THEME_COLOR="#2563eb"
PWA_BACKGROUND_COLOR="#ffffff"




